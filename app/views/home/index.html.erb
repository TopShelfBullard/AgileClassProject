<p class="navbar-text pull-right">
<% if admin_signed_in? %>
  Logged in as <strong><%= current_admin.email %></strong>.
  <%= link_to 'Admin Page', admins_path %> - | -
  <%= link_to 'Edit profile', edit_admin_registration_path, :class => 'navbar-link' %> - | -
  <%= link_to "Logout", destroy_admin_session_path, method: :delete, :class => 'navbar-link'  %>
<% else %>
  <%= link_to "Admin Login", new_admin_session_path, :class => 'navbar-link'  %>
<% end %>

<% if notice %>
  <p class="alert alert-success"><%= notice %></p>
<% end %>
<% if alert %>
  <p class="alert alert-danger"><%= alert %></p>
<% end %>

<h3>User Page</h3>
<%= form_tag jobs_path, :method => 'get' do %>
  <%= label_tag(:q, "Search for Keywords") %><br>
  <%= text_field_tag :search, params[:search] %>
  <%= submit_tag "Search", :name => nil %>
<% end %>

<%= form_tag jobs_path, :method => 'get' do %>
  <%= label_tag(:q, "Search by Company Name") %><br>
  <%= text_field_tag :search, params[:search] %>
  <%= submit_tag "Search", :name => nil %>
<% end %>

<%= form_tag jobs_path, :method => 'get' do %>
  <%= label_tag(:q, "Search by Job Title") %><br>
  <%= text_field_tag :search, params[:search] %>
  <%= submit_tag "Search", :name => nil %>
<% end %><br>
<% @jobs.each do | job | %>
  <% if job.approved == true %>
    <div>
      <%= link_to "Company: #{Company.find(job.company_id).name}  Job Title: #{job.title}  -  Job Type: #{job.job_type}", job %>
    </div>
  <% end %>
<% end %>
